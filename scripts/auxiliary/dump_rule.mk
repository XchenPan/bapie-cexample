# ==========================================================================
# dump rule
# ==========================================================================

########################################
# Always build                         #
########################################

# bin-always-y += foo
# ... is a shorthand for
# bin += foo
# always-y  += foo
dump        += $(dump-always-y)
dump-always += $(dump-always-y)
dump-dis    += $(dump-always-)

########################################
# Sort files                           #
########################################

dump	:= $(sort $(dump))

########################################
# Dump options                         #
########################################

dump-flags-y	?= -D

########################################
# Add path                             #
########################################

dump            := $(addprefix $(obj)/,$(dump))
dump-always     := $(addprefix $(obj)/,$(dump-always))
dump-dis        := $(addprefix $(obj)/,$(dump-dis))

########################################
# Always rule                          #
########################################

always-y        += $(dump-always)

########################################
# clean rule                           #
########################################

clean-files     += $(dump) $(dump-dis)
